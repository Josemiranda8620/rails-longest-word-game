<h1> New Game</h1>
<p><% @letters.each do |letter| %>
    <%= letter %>
<% end %>  
<% @letters = [] %></p>

<h4> What is the longest word you can guess?</h4>

<form action="/score" method="post">
    <input type="text" name="word" placeholder="Word" value='<%= params[:word] %>'>
    <input type="submit" value="Try">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>